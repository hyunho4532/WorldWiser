<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorldWiser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WorldWiser.IntroActivity_Background_Color" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">#67A5EF</item>
    </style>

    <style name="Theme.WorldWiser.LoginActivity_HelloWorld_Wiser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#CCFFFFFF</item>
    </style>

    <style name="Theme.WorldWiser.LoginActivity_Login_SimpleLogin_Needed" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#CCFFFFFF</item>
    </style>

    <style name="Theme.WorldWiser.LoginActivity_Login_InputEmail_EditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>