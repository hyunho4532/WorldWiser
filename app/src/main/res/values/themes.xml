<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorldWiser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="Theme.WorldWiser.IntroActivity_Background_Color">
        <item name="android:background">#67A5EF</item>
    </style>

    <style name="Theme.WorldWiser.LoginActivity_HelloWorld_Wiser">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#CC000000</item>
    </style>

    <style name="Theme.WorldWiser.LoginActivity_Login_SimpleLogin_Needed">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#CC000000</item>
    </style>

    <style name="Theme.WorldWiser.LoginActivity_Login_InputEmail_EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.WorldWiser.VerificationActivity_NickName_EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.WorldWiser.LoginActivity_Login_Forget_Password">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7BBCFC</item>
    </style>

    <style name="Theme.WorldWiser.LoginActivity_Login_OR">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#C8E3FF</item>
    </style>

    <style name="Theme.WorldWiser.VerificationActivity_Verification_Phone">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.WorldWiser.VerificationActivity_PowerSpinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
    </style>

    <!-- 캘린더의 요일에 적용되는 스타일 -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/text100</item>
    </style>

    <!-- 연, 월을 표시하는 헤더에 적용되는 스타일 -->
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text100</item>
    </style>

</resources>