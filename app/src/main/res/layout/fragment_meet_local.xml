<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.trend.MeetLocalFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_meet_local_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="로컬 관광(Meet the local)"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_meet_local_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="자신의 취향에 맞는 새로운 여행 지도"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_meet_local_title" />

        <TextView
            android:id="@+id/tv_meet_local_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="자신의 취향, 관심사 중시"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            app:layout_constraintStart_toStartOf="@+id/tv_meet_local_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_meet_local_content" />

        <TextView
            android:id="@+id/tv_meet_local_interest_content"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="여행지 지명도 영향력이 줄고, 자신의 관심과 취향을 반영한 새로운 여행지에 대한 관심이 증가함"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_meet_local_interest"
            app:layout_constraintTop_toBottomOf="@+id/tv_meet_local_interest" />

        <TextView
            android:id="@+id/tv_meet_local_interest_intention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="로컬관광 의향은 58.8%로, 세대 중 Z세대, X세대에서 높게 나타남"
            android:textColor="#64B5F6"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_meet_local_interest_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_meet_local_interest_content" />

        <TextView
            android:id="@+id/tv_meet_local_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="로컬관광 관심 테마"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_meet_local_interest_intention"
            app:layout_constraintTop_toBottomOf="@+id/tv_meet_local_interest_intention" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>